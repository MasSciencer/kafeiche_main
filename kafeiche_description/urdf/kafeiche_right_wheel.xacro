<?xml version="1.0" encoding="utf-8"?>
<robot name="kafeiche"
    xmlns:xacro="http://www.ros.org/wiki/xacro">

	<!-- right_wheel -->
	<link name="link_right_wheel">
		<inertial>
			<origin xyz="-5.6684E-07 -0.00028616 -2.3983E-06" rpy="0 0 0" />
			<mass value="0.21028" />
			<inertia ixx="0.00036258" ixy="8.5283E-10" ixz="-1.3395E-09" iyy="0.00069293" iyz="1.7019E-09" izz="0.0003626" />
		</inertial>
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0" />
			<geometry>
				<mesh filename="package://kafeiche_description/meshes/link_right_wheel.stl" />
			</geometry>
			<material name="Yellow" />
		</visual>
		<collision>
			<origin xyz="0 0 0" rpy="0 0 0" />
			<geometry>
				<mesh filename="package://kafeiche_description/meshes/link_right_wheel.stl" />
			</geometry>
		</collision>
	</link>

	<link name="right_wheel">
		<visual>
			<origin xyz="0 0 0" rpy="1.5707963 0 0" />
			<geometry>
				<cylinder length="${wheel_width}" radius="${wheel_radius}" />
			</geometry>
			<material name="Yellow" />
		</visual>
		<collision>
			<origin xyz="0 0 0" rpy="1.5707963 0 0" />
			<geometry>
				<cylinder length="${wheel_width}" radius="${wheel_radius}" />
			</geometry>
		</collision>
	</link>

	<joint name="right_wheel_visual_joint" type="fixed">
		<origin xyz="0 0 0" rpy="0 0 0" />
		<parent link="right_wheel" />
		<child link="link_right_wheel" />
	</joint>

	<joint name="right_wheel_joint" type="continuous">
		<origin xyz="-0.051128 -0.0248 -0.10695" rpy="0 0 0" />
		<parent link="link_right_wheel_base" />
		<child link="right_wheel" />
		<axis xyz="0 1 0" />
	</joint>

	<!-- ros2_control hardware interfaces -->
	<ros2_control>
		<hardware>
			<plugin>kafeiche_control/DiffBotSystemHardware</plugin>
			<param name="right_wheel_motor_interface" />
		</hardware>

		<joint name="right_wheel_joint">
			<!-- Интерфейсы команд для управления скоростью колеса -->
			<command_interface name="velocity" />
			<!-- Интерфейсы состояния для чтения скорости с энкодера -->
			<state_interface name="velocity" />
			<state_interface name="position"/>
		</joint>
	</ros2_control>
</robot>
