<?xml version="1.0" encoding="utf-8"?>
<robot name="kafeiche"
    xmlns:xacro="http://www.ros.org/wiki/xacro">
    <!-- left_wheel -->
  <link
    name="link_left_wheel">
    <inertial>
      <origin
        xyz="-1.6589E-06 0.00028616 -2.2144E-06"
        rpy="0 0 0" />
      <mass
        value="0.21026" />
      <inertia
        ixx="0.00036256"
        ixy="1.1833E-09"
        ixz="-4.1373E-09"
        iyy="0.00069288"
        iyz="-2.2704E-09"
        izz="0.00036258" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://kafeiche_description/meshes/link_left_wheel.stl" />
      </geometry>
      <material
        name="Yellow">
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://kafeiche_description/meshes/link_left_wheel.stl" />
      </geometry>
    </collision>
  </link>
  <link name="left_wheel">
    <visual>
        <origin xyz="0 0 0" rpy="1.5707963 0 0" />
        <geometry>
            <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
        </geometry>
        <material name="Yellow" />
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="1.5707963 0 0" />
        <geometry>
            <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
        </geometry>
    </collision>
</link>
<joint name="left_wheel_visual_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="left_wheel" />
    <child link="link_left_wheel" />
</joint>
<joint name="left_wheel_joint" type="continuous">
    <origin xyz="-0.050949 0.0248 -0.10246" rpy="0 0 0" />
    <parent link="link_left_wheel_base" />
    <child link="left_wheel" />
    <axis xyz="0 1 0" />
</joint>
	<!-- ros2_control hardware interfaces -->
	<ros2_control>
		<hardware>
			<plugin>kafeiche_control/DiffBotSystemHardware</plugin>
			<param name="left_wheel_motor_interface" />
		</hardware>

		<joint name="left_wheel_joint">
			<!-- Интерфейсы команд для управления скоростью колеса -->
			<command_interface name="velocity" />
			<!-- Интерфейсы состояния для чтения скорости с энкодера -->
			<state_interface name="velocity" />
			<state_interface name="position"/>
			
		</joint>
	</ros2_control>
	
	
	
</robot>

